@{
    Layout = null;
    ViewData["Title"] = "User Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - HMH Mart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <style>
        :root {
            --hmh-teal: #008080;
            --hmh-light: #f8f9fa;
        }

        body {
            font-family: 'Segoe UI', system-ui, sans-serif;
            background-color: #fafafa;
            min-height: 100vh;
        }

        .sidebar {
            width: 280px;
            height: 100vh;
            background: white;
            border-right: 1px solid #eee;
            position: fixed;
        }

        .main-content {
            margin-left: 280px;
            padding: 2rem;
        }

        .nav-link {
            padding: 0.75rem 1.5rem;
            color: #666;
            border-radius: 8px;
            transition: all 0.2s;
        }

            .nav-link.active {
                background: rgba(0, 128, 128, 0.1);
                color: var(--hmh-teal);
                font-weight: 500;
            }

        .dashboard-card {
            background: white;
            border: none;
            border-radius: 16px;
            box-shadow: 0 4px 24px rgba(0, 128, 128, 0.05);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .hover-lift:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 128, 128, 0.1);
        }
    </style>
</head>
<body>
    <div class="sidebar p-3">
        <div class="mb-4">
            <h4 class="fw-semibold">
                <i class="bi bi-basket-fill me-2" style="color: var(--hmh-teal);"></i>HMH Mart
            </h4>
        </div>
        <nav class="nav flex-column">
            <a class="nav-link active" href="#products">
                <i class="bi bi-box-seam me-2"></i>Dashboard
            </a>
            <a class="nav-link" href="./Cart">
                <i class="bi bi-cart3 me-2"></i>Shopping Cart
            </a>
            <a class="nav-link" href="../Home/Catalogue">
                <i class="bi bi-search me-2"></i>Browse Products
            </a>
            <a class="nav-link" href="#orders">
                <i class="bi bi-list-check me-2"></i>Orders
            </a>
        </nav>
    </div>

    <div class="main-content">
        <div class="dashboard-card p-4 mb-4 hover-lift" id="cart">
            <h5 class="fw-semibold mb-4"><i class="bi bi-cart3 me-2"></i>Shopping Cart</h5>
            <div class="cart-items">
                <div class="d-flex justify-content-between align-items-center mb-3 p-2">
                    <div>
                        <div class="fw-semibold">Premium Olive Oil</div>
                        <small class="text-muted">$8.99 × 2</small>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <span class="text-teal fw-semibold">$17.98</span>
                        <button class="btn btn-sm btn-link text-danger p-0">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="mt-4 pt-3 border-top">
                <div class="d-flex justify-content-between fw-semibold mb-3">
                    <span>Total:</span>
                    <span class="text-teal">$42.50</span>
                </div>
                <button class="btn btn-teal w-100">
                    <i class="bi bi-credit-card me-2"></i>Checkout Now
                </button>
            </div>
        </div>

        <div class="dashboard-card p-4 mb-4 hover-lift" id="orders">
            <h5 class="fw-semibold mb-4"><i class="bi bi-lightning-charge me-2"></i>Active Orders</h5>
            <div class="order-list">
                <div class="d-flex justify-content-between align-items-center p-3 mb-3">
                    <div>
                        <div class="fw-semibold">#ORD-1052</div>
                        <small class="text-muted">3 items · Est. Delivery: 2023-06-20</small>
                    </div>
                    <div class="d-flex align-items-center gap-3">
                        <span class="badge bg-warning bg-opacity-10 text-warning">Processing</span>
                        <button class="btn btn-sm btn-teal">
                            <i class="bi bi-eye"></i> Details
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="dashboard-card p-4 hover-lift" id="browse">
            <h5 class="fw-semibold mb-4"><i class="bi bi-search me-2"></i>Browse Products</h5>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="dashboard-card p-3 hover-lift">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-semibold mb-1">Organic Honey</div>
                                <small class="text-muted">Food · 500g</small>
                                <div class="mt-2 text-teal fw-semibold">$6.99</div>
                            </div>
                            <button class="btn btn-sm btn-teal">
                                <i class="bi bi-cart-plus"></i> Add
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>