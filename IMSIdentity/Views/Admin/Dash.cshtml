@model List<IMSIdentity.Models.Product>

@{
    Layout = null;
    ViewData["Title"] = "Admin Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - HMH Mart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <style>
        :root {
            --hmh-teal: #008080;
            --hmh-light: #f8f9fa;
            --hmh-danger: #dc3545;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
            overflow-x: hidden;
        }

        .sidebar {
            height: 100vh;
            background-color: white;
            border-right: 1px solid #eee;
            position: fixed;
            width: 280px;
        }

        .main-content {
            margin-left: 280px;
            padding: 2rem;
            background-color: var(--hmh-light);
            width: calc(100% - 280px);
            box-sizing: border-box;
        }

        .card-hover {
            transition: all 0.3s;
            border: none;
            border-radius: 16px;
            box-shadow: 0 4px 24px rgba(0, 128, 128, 0.05);
            margin-bottom: 1rem;
            max-width: 100%;
        }

            .card-hover:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(0, 128, 128, 0.1);
            }

        .active-menu {
            background-color: rgba(0, 128, 128, 0.1) !important;
            color: var(--hmh-teal) !important;
            border-left: 3px solid var(--hmh-teal) !important;
        }

        .nav-link {
            padding: 0.75rem 1.5rem;
            color: #666;
            border-radius: 8px;
            transition: all 0.2s;
        }

        .hmh-text-teal {
            color: var(--hmh-teal);
        }

        .btn-hmh {
            background-color: var(--hmh-teal);
            color: white;
            padding: 10px 25px;
            border-radius: 30px;
            font-weight: 500;
            transition: all 0.3s;
        }

            .btn-hmh:hover {
                background-color: #006666;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            }

        .table-responsive {
            overflow-x: auto;
            max-width: 98%;
            margin: 0 auto;
        }

        .row.mb-4 {
            margin-left: -0.5rem;
            margin-right: -0.5rem;
        }

            .row.mb-4 > .col-md-3 {
                padding-left: 0.5rem;
                padding-right: 0.5rem;
                flex: 0 0 24%;
                max-width: 24%;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="sidebar p-3">
                <div class="mb-4">
                    <h4 class="fw-semibold hmh-text-teal">
                        <i class="bi bi-basket-fill me-2"></i>HMH Mart
                    </h4>
                </div>
                <nav class="nav flex-column">
                    <a class="nav-link active-menu" href="#">
                        <i class="bi bi-speedometer2 me-2"></i>Dashboard
                    </a>
                    <a class="nav-link" href="/Home/Catalogue">
                        <i class="bi bi-box-seam me-2"></i>Products
                    </a>
                    <a class="nav-link" href="/Home/Order">
                        <i class="bi bi-cart-check me-2"></i>Orders
                    </a>
                    <a class="nav-link" href="/Admin/Alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>Alerts
                    </a>
                </nav>
            </div>

            <div class="main-content">
                <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
                    <div class="container-fluid">
                        <a class="navbar-brand fw-bold hmh-text-teal" href="#">
                            <i class="bi bi-basket-fill me-2"></i>HMH Mart
                        </a>
                        <div class="d-flex align-items-center ms-auto">
                            <div class="dropdown">
                                <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1 hmh-text-teal"></i> Admin User
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#">Profile</a></li>
                                    <li><a class="dropdown-item" href="#">Settings</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#">Sign out</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>

                <div class="container-fluid p-0">
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card card-hover">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="text-muted">Total Products</h6>
                                            <h3 class="hmh-text-teal">142</h3>
                                        </div>
                                        <div class="bg-teal bg-opacity-10 p-3 rounded">
                                            <i class="bi bi-box-seam hmh-text-teal fs-4"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="card card-hover">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="text-muted">Low Stock</h6>
                                            <h3 class="hmh-text-teal">8</h3>
                                        </div>
                                        <div class="bg-danger bg-opacity-10 p-3 rounded">
                                            <i class="bi bi-exclamation-triangle text-danger fs-4"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="card card-hover">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="text-muted">Pending Orders</h6>
                                            <h3 class="hmh-text-teal">24</h3>
                                        </div>
                                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                                            <i class="bi bi-cart text-warning fs-4"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="card card-hover">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="text-muted">Revenue</h6>
                                            <h3 class="hmh-text-teal">$3,845</h3>
                                        </div>
                                        <div class="bg-success bg-opacity-10 p-3 rounded">
                                            <i class="bi bi-currency-dollar text-success fs-4"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card card-hover mb-4">
                        <div class="card-header bg-white border-0">
                            <div class="d-flex justify-content-between align-items-center flex-wrap">
                                <h5 class="mb-0 hmh-text-teal">
                                    <i class="bi bi-box-seam me-2"></i>Product Management
                                </h5>
                                <a class="btn btn-hmh mt-2 mt-md-0" asp-controller="Admin" asp-action="Add">
                                    <i class="bi bi-plus-lg me-1"></i>Add Product
                                </a>
                            </div>
                        </div>

                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Product</th>
                                            <th>Category</th>
                                            <th>Stock</th>
                                            <th>Price</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Any()){
                                            @foreach (var product in Model)
                                            {
                                                <tr>
                                                    <td>@product.Id</td>
                                                    <td>@product.Name</td>
                                                    <td>@product.Type</td>
                                                    <td>
                                                        <span class="badge bg-success">@product.Quantity</span>
                                                    </td>
                                                    <td>@product.Price</td>
                                                    <td>
                                                        <a asp-controller="Admin" asp-action="Edit" id="@product.Id" class="btn btn-sm btn-outline-primary me-1">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <a asp-controller="Admin" asp-action="Delete" id="@product.Id" class="btn btn-sm btn-outline-danger">
                                                            <i class="bi bi-trash"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="card card-hover mb-4">
                        <div class="card-header bg-white border-0">
                            <h5 class="mb-0 hmh-text-teal">
                                <i class="bi bi-exclamation-triangle me-2"></i>Low Stock Alerts
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-low-stock d-flex align-items-center mb-3">
                                <i class="bi bi-exclamation-triangle-fill text-danger me-3 fs-4"></i>
                                <div>
                                    <strong>Olive Oil</strong> is running low (5 remaining)
                                    <div class="text-muted small">Reorder threshold: 10 units</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card card-hover">
                        <div class="card-header bg-white border-0">
                            <h5 class="mb-0 hmh-text-teal">
                                <i class="bi bi-cart-check me-2"></i>Recent Orders
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Order ID</th>
                                            <th>Customer</th>
                                            <th>Date</th>
                                            <th>Amount</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>ORD-1052</td>
                                            <td>John Smith</td>
                                            <td>2023-06-15</td>
                                            <td>$84.50</td>
                                            <td>
                                                <span class="badge bg-warning text-dark">Pending</span>
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> View
                                                </button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
</body>
</html>
