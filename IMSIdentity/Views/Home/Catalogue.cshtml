@{
    Layout = null;
    ViewData["Title"] = "Product Catalogue";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - HMH Mart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <style>
        :root {
            --hmh-teal: #008080;
            --hmh-light: #f8f9fa;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
        }

        .hmh-bg-teal {
            background-color: var(--hmh-teal);
        }

        .hmh-text-teal {
            color: var(--hmh-teal);
        }

        .card-hover {
            transition: all 0.3s;
            border: none;
            border-radius: 16px;
            box-shadow: 0 4px 24px rgba(0, 128, 128, 0.05);
        }

            .card-hover:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(0, 128, 128, 0.1);
            }

        .product-img {
            height: 200px;
            object-fit: cover;
            border-radius: 16px 16px 0 0;
        }

        .btn-hmh {
            background-color: var(--hmh-teal);
            color: white;
            padding: 10px 25px;
            border-radius: 30px;
            font-weight: 500;
            transition: all 0.3s;
        }

            .btn-hmh:hover {
                background-color: #006666;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            }

        .price-tag {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--hmh-teal);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark hmh-bg-teal py-3">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">
                <i class="bi bi-basket-fill me-2"></i>HMH Mart
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Categories</a>
                    </li>
                </ul>
                <div class="ms-lg-3 mt-3 mt-lg-0">
                    <a href="/cart" class="btn btn-light me-2">
                        <i class="bi bi-cart3"></i> Cart
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container py-5">
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="fw-bold hmh-text-teal">Product Catalogue</h2>
                <p class="lead">Explore our wide range of products</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card card-hover h-100">
                    <img src="/images/img3.png" class="card-img-top product-img" alt="Product 1">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Premium Olive Oil</h5>
                        <p class="card-text text-muted">Extra virgin cold-pressed olive oil</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="price-tag">$8.99</span>
                            <button class="btn btn-hmh">
                                <i class="bi bi-cart-plus me-1"></i> Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-hover h-100">
                    <img src="/images/img3.png" class="card-img-top product-img" alt="Product 1">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Premium Olive Oil</h5>
                        <p class="card-text text-muted">Extra virgin cold-pressed olive oil</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="price-tag">$8.99</span>
                            <button class="btn btn-hmh">
                                <i class="bi bi-cart-plus me-1"></i> Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-hover h-100">
                    <img src="/images/product1.jpg" class="card-img-top product-img" alt="Product 1">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Premium Olive Oil</h5>
                        <p class="card-text text-muted">Extra virgin cold-pressed olive oil</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="price-tag">$8.99</span>
                            <button class="btn btn-hmh">
                                <i class="bi bi-cart-plus me-1"></i> Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card card-hover h-100">
                    <img src= src="\images\img2.jpeg" class="card-img-top product-img" alt="Product 2">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Organic Honey</h5>
                        <p class="card-text text-muted">Pure natural honey 500g</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="price-tag">$6.99</span>
                            <button class="btn btn-hmh">
                                <i class="bi bi-cart-plus me-1"></i> Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <footer class="hmh-bg-teal text-white py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-box-seam me-2"></i>HMH Mart
                    </h5>
                    <p>Quality products for your everyday needs</p>
                </div>
                <div class="col-lg-2 col-md-4 mb-4 mb-md-0">
                    <h5 class="fw-bold mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none">Home</a></li>
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none">Shop</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Contact</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-4 bg-white">
            <div class="text-center">
                <p class="mb-0">© 2024 HMH Mart. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
